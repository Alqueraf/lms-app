<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#ff4A5C63"/>

            <padding android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp"/>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ff00384d"/>

            <padding android:left="10dp"
                     android:right="10dp"
                     android:bottom="10dp"
                     android:top="10dp"/>

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/canvasBlue"/>

            <padding android:left="10dp"
                     android:right="10dp"
                     android:bottom="10dp"
                     android:top="10dp"/>
        </shape>
    </item>


</selector>