<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.instructure.androidfoosball.views.TeamLayout
                android:id="@+id/teamLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:canEdit="false"
                app:isVertical="true"
                app:teamColor="@color/victory"/>

            <TextView
                android:id="@+id/scoreView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <com.instructure.androidfoosball.views.TeamLayout
                android:id="@+id/teamLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:canEdit="false"
                app:isVertical="true"
                app:teamColor="@color/gray"/>

            <TextView
                android:id="@+id/scoreView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <com.instructure.androidfoosball.views.TeamLayout
                android:id="@+id/teamLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:canEdit="false"
                app:isVertical="true"
                app:teamColor="@color/gray"/>

            <TextView
                android:id="@+id/scoreView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <com.instructure.androidfoosball.views.TeamLayout
                android:id="@+id/teamLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:canEdit="false"
                app:isVertical="true"
                app:teamColor="@color/gray"/>

            <TextView
                android:id="@+id/scoreView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <com.instructure.androidfoosball.views.TeamLayout
                android:id="@+id/teamLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:canEdit="false"
                app:isVertical="true"
                app:teamColor="@color/gray"/>

            <TextView
                android:id="@+id/scoreView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <com.instructure.androidfoosball.views.TeamLayout
                android:id="@+id/teamLayout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:canEdit="false"
                app:isVertical="true"
                app:teamColor="@color/gray"/>

            <TextView
                android:id="@+id/scoreView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="5"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp">

        <com.instructure.androidfoosball.views.PlayerView
            android:id="@+id/playerLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:src="@drawable/sadpanda"/>

        <com.instructure.androidfoosball.views.PlayerView
            android:id="@+id/playerLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:src="@drawable/sadpanda"/>

        <com.instructure.androidfoosball.views.PlayerView
            android:id="@+id/playerLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:src="@drawable/sadpanda"/>

        <com.instructure.androidfoosball.views.PlayerView
            android:id="@+id/playerLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="16dp"
            tools:src="@drawable/sadpanda"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#888"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/endGameView"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerInParent="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_outline_blue_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:drawablePadding="4dp"
                    android:drawableTop="@drawable/ic_check_blue_48dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="@string/end_game"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"/>

                <com.instructure.androidfoosball.views.CountdownCircle
                    android:id="@+id/countdownView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/undoView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignBottom="@id/endGameView"
                android:layout_toEndOf="@id/endGameView"
                android:background="@drawable/circle_outline_thin"
                android:contentDescription="@string/undo_last_goal"
                android:padding="12dp"
                android:src="@drawable/ic_undo_black_24dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
