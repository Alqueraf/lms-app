<!-- Generated with http://android-holo-colors.com -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SpeedGrader_Material" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sg_defaultPrimary</item>
        <item name="colorPrimaryDark">@color/sg_defaultPrimaryDark</item>
        <item name="colorAccent">@color/sg_defaultAccent</item>

        <item name="android:windowBackground">@color/canvasBackgroundLight</item>
        <item name="android:buttonStyle">@style/ButtonCanvasTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonCanvasTheme</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="android:radioButtonStyle">@style/SG_RadioButtonStyle</item>
        <item name="android:editTextBackground">@drawable/canvastheme_edit_text_holo_light</item>
    </style>

    <style name="SpeedGrader_Material.Toolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">

        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_cv_cancel_white_thin</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/ic_action_search</item>
    </style>

    <style name="ActionButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingRight">16dip</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="SG_RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/sg_radio_buttons</item>
    </style>

    <style name="SpeedGraderTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="SpeedGrader_Material.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>