<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/pickerHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:padding="10dip">

        <TextView
            android:id="@+id/chooseMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/chooseMedia"
            android:padding="10dp"
            style="@style/TextStyle.Primary"
            android:drawableLeft="@drawable/ic_cv_media"/>

        <TextView
            android:id="@+id/takeVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooseMedia"
            android:gravity="center"
            android:layout_alignRight="@+id/chooseMedia"
            android:layout_alignLeft="@+id/chooseMedia"
            android:padding="10dp"
            android:text="@string/takeVideo"
            style="@style/TextStyle.Primary"
            android:drawableLeft="@drawable/ic_cv_camera"/>
    </RelativeLayout>

</RelativeLayout>