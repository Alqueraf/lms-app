<resources>

    <!-- Base application theme. -->
    <style name="TeacherToolsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryDark">@color/defaultPrimaryDark</item>
        <item name="colorAccent">@color/mainGreen</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorSecondary">@color/mainGreen</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_home_white</item>
        <item name="homeAsUpIndicator">@drawable/ic_home_white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
    </style>
    <!--List Styles-->
    <style name="ListHeaderStyleTA" parent="TeacherToolsTheme">
        <item name="android:textColor">@color/canvasTextMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/listHeaderHeight</item>
        <item name="android:background">@color/canvasBackgroundMedium</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>
