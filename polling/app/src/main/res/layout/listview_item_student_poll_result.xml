<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/correctAnswer"
        android:layout_width="@dimen/resultsImageWidth"
        android:layout_height="@dimen/resultsImageWidth"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/correctAnswer"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/percentAnswered"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:indeterminateOnly="false"
            android:max="100"
            android:minHeight="10dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/numAnswered"
                style="@style/TextStyle.Primary.Bold"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/answer"
                style="@style/TextStyle.Primary"
                android:layout_toEndOf="@id/numAnswered" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>