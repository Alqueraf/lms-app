<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/add_answer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dropshadow_nine_patch"
        >
        <RadioButton
            android:id="@+id/correctAnswerAdded"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/canvaspollingtheme_btn_radio_holo_light"
            android:layout_centerVertical="true"/>
        <EditText
            style="@style/TextAppearance.EditText"
            android:id="@+id/edit_answer_added"
            android:hint="@string/enterResponse"
            android:layout_toRightOf="@+id/correctAnswerAdded"
            android:inputType="textCapSentences"
            android:maxLength="255"
            />
    </LinearLayout>

    </RelativeLayout>
